<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FICO" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Screen Background color. -->
        <item name="android:windowBackground">@color/blue_10</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Used on background color of dialogs -->
        <item name="colorSurfaceContainerHigh">@color/pearl</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Toolbar icons color -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Bottom App Bar Colors -->
        <item name="bottomAppBarBackgroundColor">@color/white</item>
        <item name="bottomAppBarItemIconTint">@color/black</item>
        <item name="bottomAppBarItemTextColor">@color/black</item>
        <item name="colorSecondaryContainer">@color/blue_30</item>
        <!-- Card background Color -->
        <item name="customCardBackgroundColor">@color/white</item>
        <!-- Dialog button text color -->
        <item name="alertDialogTextButtonColor">@color/blue_400</item>
        <!-- Box Stroke color / input text layout -->
        <item name="boxStrokeColor">@color/blue_400</item>
        <!-- Login and Register activity logo -->
        <item name="login_register_logo">@drawable/login_logo_black</item>

        <!-- button color -->
        <item name="buttonColor">@color/blue_400</item>

    </style>

    <style name="Theme.App.SplashScreen" parent = "Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/app_icon_round</item>
        <item name="postSplashScreenTheme">@style/Theme.FICO</item>
    </style>

</resources>


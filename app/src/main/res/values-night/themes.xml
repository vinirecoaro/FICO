<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FICO" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Toolbar icons color -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Bottom App Bar Color -->
        <item name="bottomAppBarBackgroundColor">@color/black_100</item>
        <item name="bottomAppBarItemIconTint">@color/white</item>
        <item name="bottomAppBarItemTextColor">@color/white</item>
        <item name="colorSecondaryContainer">@color/grey_500</item>
    </style>

    <style name="Theme.App.SplashScreen" parent = "Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/app_icon_round</item>
        <item name="postSplashScreenTheme">@style/Theme.FICO</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#BABABF" /> <!-- Cor do fundo do item selecionado -->
            <corners android:radius="20dp" /> <!-- Arredondamento dos cantos -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Fundo transparente quando nÃ£o selecionado -->
        </shape>
    </item>
</selector>
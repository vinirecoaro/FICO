    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fico.presentation.fragments.expense.expense_home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_add_expense"
        android:name="com.example.fico.presentation.fragments.expense.add_expense.AddExpenseFragment"
        android:label="@string/add"
        tools:layout="@layout/fragment_add_expense" />

    <fragment
        android:id="@+id/navigation_expense_list"
        android:name="com.example.fico.presentation.fragments.expense.ExpenseListFragment"
        android:label="@string/list"
        tools:layout="@layout/fragment_expense_list" />

    <fragment
        android:id="@+id/navigation_config"
        android:name="com.example.fico.presentation.fragments.expense.ExpenseConfigurationFragment"

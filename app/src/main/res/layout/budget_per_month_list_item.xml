<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_texts"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@drawable/rounded_config_item_corner"
   >
    <TextView
        android:id="@+id/tv_budget_per_month_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Dezembro - 2024"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_budget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingEnd="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="R$1500,00"
        android:textSize="18sp"
        android:gravity="center_vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>

<View
    app:layout_constraintTop_toBottomOf="@id/cl_texts"
    android:layout_width="match_parent"
    android:layout_marginTop="2dp"
    android:layout_height="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>